<div id="app"
     v-cloak>
    <form autocomplete="off">

        <div class="form-group">
            <label for="orderDate">訂單日期：</label>
            <input type="date"
                   class="form-control"
                   readonly
                   v-model="dto.OrderDate" />
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>報價項目</th>
                <th>單價</th>
                <th>數量</th>
                <th>總價</th>
                <th>備註</th>
            </tr>
            </thead>
            <tbody>
            <tr v-for="(detail, detailIndex) in dto.Details"
                v-bind:key="detail.Guid">
                <td>
                    <select-options v-bind:id="'OrderItems' + detailIndex"
                                    v-bind:options="orderItems"
                                    v-bind:disabled="true"
                                    v-model="detail.OrderItemGuid">
                    </select-options>
                </td>
                <td>
                    <input type="number"
                           step="1"
                           class="form-control text-right"
                           readonly
                           v-model="detail.UnitPrice" />
                </td>
                <td>
                    <input type="number"
                           step="1"
                           class="form-control text-right"
                           readonly
                           v-model="detail.Count" />
                </td>
                <td>
                    <input type="number"
                           step="1"
                           class="form-control text-right"
                           readonly
                           v-model="detail.SumPrice" />
                </td>
                <td>
                    <input class="form-control"
                           readonly
                           v-model="detail.Comment" />
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td class="text-right">小計：</td>
                <td>
                    <input readonly
                           class="form-control text-right"
                           v-model="dto.SubTotal" />
                </td>


            </tr>
            <tr>
                <td></td>
                <td></td>
                <td class="text-right">加值營業稅：</td>
                <td>
                    <input readonly
                           class="form-control text-right"
                           v-model="dto.BusinessTax" />
                </td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td class="text-right">合計：</td>
                <td>
                    <input readonly
                           class="form-control text-right"
                           v-model="dto.Total" />
                </td>
                <td></td>
                <td></td>
            </tr>
            </tbody>
        </table>
        <div class="form-group">
            <label for="orderDate">備註：</label>
            <textarea rows="3"
                      readonly
                      class="form-control"
                      v-model="dto.Remark">
            </textarea>
        </div>
    </form>
    <a v-bind:href='prevUrl'>回上一頁</a>
</div>


