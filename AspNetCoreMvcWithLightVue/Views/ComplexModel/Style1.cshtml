@model AspNetCoreMvcWithLightVue.Controllers.ComplexViewModel

<h4>ComplexViewModel FormData 版</h4>
<hr />
<div>
    <form asp-action="ShowStyle1"
          autocomplete="off"
          method="post">
        <div>
            <table class="table">
                <thead>
                <tr>
                    <th>Category</th>
                    <th>Name</th>
                    <th>Value</th>
                    <th></th>
                </tr>
                </thead>
                <tbody id="categories">
                @for (int i = 0; i < Model.Categories.Length; i++)
                {
                    ViewBag.CategoryIndex = (int?)i;

                    <partial name="CategoryView" />
                    <br />
                }
                </tbody>
            </table>
            <input type="button"
                   value="新增"
                   class="btn btn-primary"
                   style="margin: 5px;"
                   onclick="AddNewCategory()" />
        </div>
        <div class="form-group">
            <input type="submit"
                   value="儲存"
                   class="btn btn-primary" />
        </div>
    </form>
</div>

<style>
    legend
    {
        font-size: 20px;
    }
    fieldset
    {
        margin:20px;
    }
    fieldset > div
    {
        margin:20px;
    }
</style>
<fieldset >
    <legend>說明：</legend>
    <div>
        新增一筆，並輸入資料
        <br>
        再刪除中間那筆，按下儲存
        <br>
        就會發現最後一筆不見了 !
        <br>
    </div>
</fieldset>

<a href='@Url.Action("Index")'>回上一頁</a>

@section Scripts
{
    <script>
        window.categoryIndex = @Model.Categories.Length;

        function AddNewCategory()
        {
            $.ajax({
                        url: '@Url.Action("NewCategoryAndThreeItems")',
                        type: 'post',
                        data: { categoryIndex } ,
                    })
             .done(function(e) {

                        $('#categories').append(e);

                        window.categoryIndex++;
                    })
             .fail(function(res) {
                        console.log('error', res);
                    });
        }

        function DeleteTable(e)
        {
            const tr = $(e.target).parent().parent();

            tr.next().remove();
            tr.next().remove();
            tr.remove();
        }
    </script>
}
